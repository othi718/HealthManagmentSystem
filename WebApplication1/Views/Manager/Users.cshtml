@using HealthManagmentSystem.Models.ViewModel
@model AdminUserViewModel

@{
    ViewData["Title"] = "Manage Doctors and Patients";
    Layout = "LayoutManager"; // Change to LayoutAdmin if needed
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manage Doctors and Patients</h2>
        <a asp-action="AddUser" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>
    </div>

    <!-- Nav Tabs -->
    <ul class="nav nav-tabs" id="userTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="doctors-tab" data-bs-toggle="tab" href="#doctors" role="tab" aria-controls="doctors" aria-selected="true">Doctors</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="patients-tab" data-bs-toggle="tab" href="#patients" role="tab" aria-controls="patients" aria-selected="false">Patients</a>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content p-3 border border-top-0 rounded-bottom" id="userTabsContent">
        <!-- Doctors Tab -->
        <div class="tab-pane fade show active" id="doctors" role="tabpanel" aria-labelledby="doctors-tab">
            @if (Model.Doctors != null && Model.Doctors.Any())
            {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model.Doctors)
                        {
                            <tr>
                                <td>@doctor.ID</td>
                                <td>@doctor.Name</td>
                                <td>@doctor.Email</td>
                                <td class="text-end">
                                    <div class="d-inline-flex">
                                        <a asp-action="EditUser" asp-route-id="@doctor.ID" asp-route-role="Doctor" class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                                            <input type="hidden" name="id" value="@doctor.ID" />
                                            <input type="hidden" name="role" value="Doctor" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No doctors found.</div>
            }
        </div>

        <!-- Patients Tab -->
        <div class="tab-pane fade" id="patients" role="tabpanel" aria-labelledby="patients-tab">
            @if (Model.Patients != null && Model.Patients.Any())
            {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.Patients)
                        {
                            <tr>
                                <td>@patient.ID</td>
                                <td>@patient.Name</td>
                                <td>@patient.Email</td>
                                <td class="text-end">
                                    <div class="d-inline-flex">
                                        <a asp-action="EditUser" asp-route-id="@patient.ID" asp-route-role="Patient" class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this patient?');">
                                            <input type="hidden" name="id" value="@patient.ID" />
                                            <input type="hidden" name="role" value="Patient" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No patients found.</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Bootstrap 5 tab handling
            const triggerTabList = [].slice.call(document.querySelectorAll('#userTabs a'));
            triggerTabList.forEach(function (triggerEl) {
                const tabTrigger = new bootstrap.Tab(triggerEl);
                triggerEl.addEventListener('click', function (e) {
                    e.preventDefault();
                    tabTrigger.show();
                });
            });

            // Show tab from hash if available (e.g., #patients)
            if (location.hash) {
                const triggerEl = document.querySelector('#userTabs a[href="' + location.hash + '"]');
                if (triggerEl) {
                    new bootstrap.Tab(triggerEl).show();
                }
            }
        });
    </script>
}
