@using HealthManagmentSystem.Models.ViewModel
@model AdminUserViewModel
@{
    ViewData["Title"] = "Manage Doctors and Patients";
    Layout = "LayoutManager"; // Use a manager-specific layout
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manage Doctors and Patients</h2>
        <a asp-action="AddUser" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>
    </div>

    <ul class="nav nav-tabs" id="userTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="doctors-tab" data-toggle="tab" href="#doctors" role="tab">Doctors</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="patients-tab" data-toggle="tab" href="#patients" role="tab">Patients</a>
        </li>
    </ul>

    <div class="tab-content p-3 border border-top-0 rounded-bottom" id="userTabsContent">
        <!-- Doctors Tab -->
        <div class="tab-pane fade show active" id="doctors" role="tabpanel">
            @if (Model.Doctors.Any())
            {
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                        
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model.Doctors)
                        {
                            <tr>
                                <td>@doctor.ID</td>
                                <td>@doctor.Name</td>
                                <td>@doctor.Email</td>
                                <td class="text-right">
                                    <div class="d-inline-flex">
                                        <a asp-action="EditUser" asp-route-id="@doctor.ID" asp-route-role="Doctor" class="btn btn-sm btn-outline-secondary mr-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                                            <input type="hidden" name="id" value="@doctor.ID" />
                                            <input type="hidden" name="role" value="Doctor" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No doctors found</div>
            }
        </div>

        <!-- Patients Tab -->
        <div class="tab-pane fade" id="patients" role="tabpanel">
            @if (Model.Patients.Any())
            {
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                          
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.Patients)
                        {
                            <tr>
                                <td>@patient.ID</td>
                                <td>@patient.Name</td>
                                <td>@patient.Email</td>
                                <td class="text-right">
                                    <div class="d-inline-flex">
                                        <a asp-action="EditUser" asp-route-id="@patient.ID" asp-route-role="Patient" class="btn btn-sm btn-outline-secondary mr-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this patient?');">
                                            <input type="hidden" name="id" value="@patient.ID" />
                                            <input type="hidden" name="role" value="Patient" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No patients found</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#userTabs a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });

            if (location.hash) {
                $('a[href="' + location.hash + '"]').tab('show');
            }

            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                history.pushState(null, null, e.target.hash);
            });
        });
    </script>
}
