@model HealthManagmentSystem.Models.ViewModel.DeleteUserViewModel
@{
    ViewData["Title"] = "Confirm User Deletion";
    Layout = "LayoutAdmin";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this user?</h4>

            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Role:</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-@(Model.Role == "Admin" ? "danger" :
                                              Model.Role == "Doctor" ? "primary" :
                                              Model.Role == "Manager" ? "info" : "warning")">
                        @Model.Role
                    </span>
                </dd>
            </dl>

            <div class="alert alert-warning">
                <strong>Warning!</strong> This action cannot be undone. All associated data will be permanently removed.
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteUserConfirmed" method="post">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Role" />

                <div class="form-group">
                    <label for="confirmationText">Type "DELETE" to confirm:</label>
                    <input type="text" class="form-control" id="confirmationText"
                           required pattern="DELETE" oninput="validateConfirmation()">
                </div>

                <div class="btn-group">
                    <button type="submit" id="deleteButton" class="btn btn-danger disabled">
                        <i class="fas fa-trash-alt"></i> Confirm Deletion
                    </button>
                    <a asp-action="Users" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validateConfirmation() {
            const deleteButton = document.getElementById('deleteButton');
            const confirmationText = document.getElementById('confirmationText');

            if (confirmationText.value === "DELETE") {
                deleteButton.classList.remove('disabled');
            } else {
                deleteButton.classList.add('disabled');
            }
        }
    </script>
}