@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "LayoutAdmin"; // You should create an admin layout
}

<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Users</div>
                <div class="card-body">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text"> Manage all system users</p>
                    <a asp-action="AddUser" class="btn btn-light">Go to Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Managers</div>
                <div class="card-body">
                   
                    <p class="card-text">@ViewBag.ManagerCount Managers registered</p>
                    <a asp-action="Users"  class="btn btn-light">View Users</a>
                </div>
            </div>
        </div>
      
    </div>
</div>