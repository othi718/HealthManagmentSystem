@{
    ViewData["Title"] = "Registration Successful";
    var role = ViewBag.Role as string ?? "User";
}

<div class="container text-center mt-5">
    <div class="alert alert-success">
        <h2>Registration Successful!</h2>
        <p>You have successfully registered as a <strong>@role</strong>.</p>
    </div>

    <div class="mt-4">
        <a asp-action="Login" class="btn btn-primary">Proceed to Login</a>
        <a asp-action="Index" class="btn btn-secondary">Return Home</a>
    </div>
</div>