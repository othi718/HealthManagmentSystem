@{
    ViewData["Title"] = "Welcome to Health Management System";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Welcome to the Health Management System</h2>
        <p class="lead text-secondary">How do you want to register?</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="list-group shadow rounded-4 overflow-hidden">
                <a asp-action="Registration" asp-route-role="Admin" class="list-group-item list-group-item-action d-flex align-items-center fs-5">
                    <i class="fas fa-user-shield text-primary me-3 fa-lg"></i> Admin
                </a>
                <a asp-action="Registration" asp-route-role="Patient" class="list-group-item list-group-item-action d-flex align-items-center fs-5">
                    <i class="fas fa-user-injured text-danger me-3 fa-lg"></i> Patient
                </a>
                <a asp-action="Registration" asp-route-role="Manager" class="list-group-item list-group-item-action d-flex align-items-center fs-5">
                    <i class="fas fa-user-tie text-warning me-3 fa-lg"></i> Manager
                </a>
                <a asp-action="Registration" asp-route-role="Doctor" class="list-group-item list-group-item-action d-flex align-items-center fs-5">
                    <i class="fas fa-user-md text-success me-3 fa-lg"></i> Doctor
                </a>
            </div>
        </div>
    </div>
</div>
