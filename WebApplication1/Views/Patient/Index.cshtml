@model HealthManagmentSystem.Controllers.PatientIndexViewModel
@{
    Layout = "LayoutPatient";
    ViewData["Title"] = "Patient Dashboard";
}

<h2>Doctors</h2>
<table class="table">
    <thead>
        <tr><th>Name</th><th>Email</th><th>Make Appointment</th></tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.Doctors)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Email</td>
                <td>
                    <form asp-action="MakeAppointment" method="post" style="display:inline-block;">
                        <input type="hidden" asp-for="NewAppointment.AppointmentDate" value="@Model.NewAppointment.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" />
                        <input type="hidden" name="DoctorId" value="@doctor.ID" />
                        <input type="hidden" name="Reason" value="@Model.NewAppointment.Reason" />
                        <button type="submit" class="btn btn-primary btn-sm">Make Appointment</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Make Appointment</h2>
<form asp-action="MakeAppointment" method="post">
    <div class="form-group">
        <label>Choose Doctor</label>
        <select asp-for="NewAppointment.DoctorId" class="form-control" asp-items="@(new SelectList(Model.Doctors, "ID", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewAppointment.AppointmentDate"></label>
        <input asp-for="NewAppointment.AppointmentDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="NewAppointment.AppointmentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewAppointment.Reason"></label>
        <textarea asp-for="NewAppointment.Reason" class="form-control"></textarea>
        <span asp-validation-for="NewAppointment.Reason" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Schedule Appointment</button>
</form>

<h2>My Appointments</h2>
<table class="table">
    <thead>
        <tr><th>Doctor</th><th>Date</th><th>Reason</th><th>Status</th><th>Action</th></tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.Doctor?.Name</td>
                <td>@appointment.AppointmentDate.ToString("g")</td>
                <td>@appointment.Reason</td>
                <td>@appointment.Status</td>
                <td>
                    @if (appointment.Status == "Scheduled")
                    {
                        <a asp-action="CancelAppointment" asp-route-id="@appointment.AppointmentId"
                           onclick="return confirm('Cancel this appointment?');" class="btn btn-danger btn-sm">Cancel</a>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
