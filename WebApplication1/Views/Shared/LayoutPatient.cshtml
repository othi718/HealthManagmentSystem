<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Health Management System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
</head>
<body>
    <!-- Header with Navigation -->
    <header class="bg-primary text-white shadow-sm">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <i class="fas fa-heartbeat me-2"></i>Health Portal
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <!-- Quick Appointment Button -->
                            <li class="nav-item">
                                <a class="nav-link btn btn-success me-2" href="/Patient/MakeAppointment">
                                    <i class="fas fa-plus-circle me-1"></i> Make Appointment
                                </a>
                            </li>

                            <!-- Doctor Search Form -->
                            <li class="nav-item">
                                <form class="d-flex" action="/Patient/Doctors" method="get">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search doctors..." name="searchString">
                                        <button class="btn btn-light" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </li>
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/Patient/Appointments">
                                    <i class="fas fa-calendar-check me-1"></i> My Appointments
                                    <span class="badge bg-info ms-1">3</span> <!-- Optional appointment count -->
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i> My Account
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/Patient/Profile"><i class="fas fa-user me-1"></i> Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Account/Logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-4">
        <div class="container text-center">
            <div class="mb-3">
                <a href="#" class="text-white mx-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white mx-2"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <p class="mb-0">&copy; @DateTime.Now.Year - Health Management System. All rights reserved.</p>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Render Section for Page-Specific Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>